generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Game {
  id          String   @id @default(uuid())
  title       String
  description String
  platforms   String[]
  releaseDate DateTime
  rating      Float
  coverImage  String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@map("games")
}
