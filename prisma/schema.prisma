generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Game {
  id               String    @id @default(uuid())
  slug             String    @unique
  name             String
  description      String?
  released         DateTime?
  background_image String?
  rating           Float?
  rating_top       Int?
  metacritic       Int?
  playtime         Int?
  platforms        String[]
  stores           String[]
  created_at       DateTime  @default(now())
  updated_at       DateTime  @updatedAt

  @@map("games")
}
